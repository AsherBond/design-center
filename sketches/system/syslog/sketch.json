{
    manifest:
    {
        "main.cf": { desc: "main file" },
        "README.md": { documentation: true },
        "sketch.json": {comment: "Sketch definition"},
        "params/demo.json": {comment: "Example parameters for use with cf-sketch"}
    },

    metadata:
    {
        name: "System::syslog",
        description: "Manage syslog configuration",
        version: 1.0,
        license: "MIT",
        "tags": [ "cfdc", "syslog", "enterprise_compatible", "sixified" ],
        authors: [ "Nick Anderson <nick@cmdln.org>", "Ted Zlatanov <tzz@lifelogs.com>", "Jon Henrik Bjornstad <jon.henrik.bjornstad@cfengine.com", "Diego Zamboni <diego.zamboni@cfengine.com>" ],
        "depends": { "CFEngine::sketch_template": {}, os: [ { "linux": "All Linux distributions", "solaris": "Solaris 8-11" } ] }
    },

    api:
    {
        // the key is the name of the bundle!
        set:
        [
            { type: "environment", name: "runenv", },
            { type: "metadata", name: "metadata", },
            { type: "string", name: "syslog_file", default: "/etc/rsyslog.conf" },
            { type: "boolean", name: "empty_first", default: false },
            { type: "array", name: "ensured_kv", description: "Key-value pairs ensured to be present" },
            { type: "array", name: "removed_kv", default: {"removethisvar": "somevalue"}, description: "Key-value pairs ensured to be removed"  },
            { type: "list", name: "removed_vars", default: ["nosuchvar"], description: "Variable names ensured to be present"  },
            { type: "return", name: "syslog_file", },
        ],
    },

    namespace: "cfdc_syslog",

    interface: [ "main.cf" ]
}
