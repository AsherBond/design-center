{
    manifest:
    {
        "main.cf": { desc: "main file" },
        "README.md": { documentation: true },
        "params/demo.json": { comment: "simple demo of EC2, S3, and SDB integration" },
        "scripts/shim.pl": { perm: 755, comment: "EC2 shim to start/stop service" },
        "scripts/aws": { perm: 755, license: "GPL", comment: "EC2 interface to start/stop service" },
    },

    metadata:
    {
        name: "Cloud::Services::AWS",
	    description: "Manage AWS services",
        version: 1.0,
        license: "MIT",
        tags: [ "cfdc" ],
        authors: [ "Ted Zlatanov <tzz@lifelogs.com>" ],
        depends: { "CFEngine::stdlib": { version: 110 }, "CFEngine::dclib": {}, cfengine: { version: "3.5.0" } }
    },
    
    api:
    {
        EC2:
        [
            { type: "environment", name: "runenv", },
            { type: "metadata", name: "mymetadata", },
            { type: "string", name: "count", },
            { type: "string", name: "ami", },
            { type: "string", name: "region", default: "us-east-1" },
            { type: "string", name: "type", default: "t1.micro"},
            { type: "string", name: "class", description: "Logical class to assign to machines" },
            { type: "boolean", name: "install_cfengine", },
            { type: "string", name: "hub", description: "Hub from which the instances should bootstrap" },
            { type: "array", name: "options", description: "Options: security_group, netrc, ssh_pub_key." },
            { type: "return", name: "instance_count", },
        ],

        S3_sync:
        [
            { type: "environment", name: "runenv", },
            { type: "metadata", name: "mymetadata", },
            { type: "string", name: "directory", },
            { type: "string", name: "s3_bucket", },
            { type: "array", name: "options", },
        ],

        S3_clear:
        [
            { type: "environment", name: "runenv", },
            { type: "metadata", name: "mymetadata", },
            { type: "string", name: "s3_clear_bucket", },
            { type: "array", name: "options", },
        ],

        SDB_sync:
        [
            { type: "environment", name: "runenv", },
            { type: "metadata", name: "mymetadata", },
            { type: "string", name: "directory", },
            { type: "string", name: "sdb_bucket", },
            { type: "array", name: "options", },
        ],

        SDB_clear:
        [
            { type: "environment", name: "runenv", },
            { type: "metadata", name: "mymetadata", },
            { type: "string", name: "sdb_clear_bucket", },
            { type: "array", name: "options", },
        ],
    },

    namespace: "cfdc_cloud_aws",
    interface: [ "main.cf" ]
}
