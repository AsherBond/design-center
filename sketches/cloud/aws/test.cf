body common control
{
      bundlesequence => { cfsketch_g, cfsketch_run };
      inputs => { @(cfsketch_g.inputs) };
}


# environment common bundles

# environment cf_sketch_testing
bundle common cf_sketch_testing
{
  vars:
      "activated" string => "1";
      "env_vars" slist => { "activated", "test", "verbose" };
      "test" string => "1";
      "verbose" string => "1";
  classes:
      "runenv_cf_sketch_testing_activated" expression => "any";
      "runenv_cf_sketch_testing_test" expression => "any";
      "runenv_cf_sketch_testing_verbose" expression => "any";
}


# activation data
bundle common cfsketch_g
{
  vars:
      # Files that need to be loaded for the activated sketches and
      # their dependencies.
      "inputs" slist => { "../../libraries/dclib/library.cf", "../../libraries/copbl/cfengine_stdlib.cf", "main.cf" };
}

bundle agent cfsketch_run
{
  vars:

      # array 'mymetadata' from definition sketch metadata, activation __001_Cloud_Services_AWS_EC2
      "__001_Cloud_Services_AWS_EC2_mymetadata[authors]" slist => { "Ted Zlatanov <tzz@lifelogs.com>" };
      "__001_Cloud_Services_AWS_EC2_mymetadata[depends]" slist => { "CFEngine::dclib", "CFEngine::stdlib" };
      "__001_Cloud_Services_AWS_EC2_mymetadata[license]" string => "MIT";
      "__001_Cloud_Services_AWS_EC2_mymetadata[location]" string => "/home/tzz/.cfagent/inputs/sketches/cloud/aws";
      "__001_Cloud_Services_AWS_EC2_mymetadata[manifest]" slist => { "README.md", "main.cf", "params/demo.json", "scripts/aws", "scripts/shim.pl" };
      "__001_Cloud_Services_AWS_EC2_mymetadata[manifest_cf]" slist => { "main.cf" };
      "__001_Cloud_Services_AWS_EC2_mymetadata[manifest_docs]" slist => { "README.md" };
      "__001_Cloud_Services_AWS_EC2_mymetadata[manifest_exe]" slist => { "scripts/aws", "scripts/shim.pl" };
      "__001_Cloud_Services_AWS_EC2_mymetadata[manifest_extra]" slist => { "params/demo.json" };
      "__001_Cloud_Services_AWS_EC2_mymetadata[name]" string => "Cloud::Services::AWS";
      "__001_Cloud_Services_AWS_EC2_mymetadata[tags]" slist => { "cfdc" };
      "__001_Cloud_Services_AWS_EC2_mymetadata[version]" string => "1";

      # array 'options' from definition /home/tzz/source/design-center/tools/test/../../sketches/cloud/aws/params/demo.json 1, activation __001_Cloud_Services_AWS_EC2
      "__001_Cloud_Services_AWS_EC2_options[netrc]" string => "/home/tzz/.netrc";
      "__001_Cloud_Services_AWS_EC2_options[security_group]" string => "default";
      "__001_Cloud_Services_AWS_EC2_options[ssh_pub_key]" string => "/root/.ssh/id_rsa.pub";

      # array 'mymetadata' from definition sketch metadata, activation __002_Cloud_Services_AWS_EC2
      "__002_Cloud_Services_AWS_EC2_mymetadata[authors]" slist => { "Ted Zlatanov <tzz@lifelogs.com>" };
      "__002_Cloud_Services_AWS_EC2_mymetadata[depends]" slist => { "CFEngine::dclib", "CFEngine::stdlib" };
      "__002_Cloud_Services_AWS_EC2_mymetadata[license]" string => "MIT";
      "__002_Cloud_Services_AWS_EC2_mymetadata[location]" string => "/home/tzz/.cfagent/inputs/sketches/cloud/aws";
      "__002_Cloud_Services_AWS_EC2_mymetadata[manifest]" slist => { "README.md", "main.cf", "params/demo.json", "scripts/aws", "scripts/shim.pl" };
      "__002_Cloud_Services_AWS_EC2_mymetadata[manifest_cf]" slist => { "main.cf" };
      "__002_Cloud_Services_AWS_EC2_mymetadata[manifest_docs]" slist => { "README.md" };
      "__002_Cloud_Services_AWS_EC2_mymetadata[manifest_exe]" slist => { "scripts/aws", "scripts/shim.pl" };
      "__002_Cloud_Services_AWS_EC2_mymetadata[manifest_extra]" slist => { "params/demo.json" };
      "__002_Cloud_Services_AWS_EC2_mymetadata[name]" string => "Cloud::Services::AWS";
      "__002_Cloud_Services_AWS_EC2_mymetadata[tags]" slist => { "cfdc" };
      "__002_Cloud_Services_AWS_EC2_mymetadata[version]" string => "1";

      # array 'options' from definition /home/tzz/source/design-center/tools/test/../../sketches/cloud/aws/params/demo.json 2, activation __002_Cloud_Services_AWS_EC2
      "__002_Cloud_Services_AWS_EC2_options[netrc]" string => "/home/tzz/.netrc";
      "__002_Cloud_Services_AWS_EC2_options[security_group]" string => "ignored";
      "__002_Cloud_Services_AWS_EC2_options[ssh_pub_key]" string => "ignored";

  methods:
    any::
      "cfsketch_g" usebundle => "cfsketch_g";
      "cf_sketch_testing" usebundle => "cf_sketch_testing";

    runenv_cf_sketch_testing_activated::
      "__001_Cloud_Services_AWS_EC2" usebundle => cfdc_cloud_aws:EC2("cf_sketch_testing", "default:cfsketch_run.__001_Cloud_Services_AWS_EC2_mymetadata", "1", "ami-a29943cb", "us-east-1", "t1.micro", "cfworker", "1", "$(sys.ipv4)", "default:cfsketch_run.__001_Cloud_Services_AWS_EC2_options"), useresult => "return___001_Cloud_Services_AWS_EC2";
    runenv_cf_sketch_testing_activated::
      "__002_Cloud_Services_AWS_EC2" usebundle => cfdc_cloud_aws:EC2("cf_sketch_testing", "default:cfsketch_run.__002_Cloud_Services_AWS_EC2_mymetadata", "0", "ignored", "us-east-1", "t1.micro", "cfworker", "1", "ignored", "default:cfsketch_run.__002_Cloud_Services_AWS_EC2_options"), useresult => "return___002_Cloud_Services_AWS_EC2";

  reports:
      "activation __001_Cloud_Services_AWS_EC2 returned instance_count = $(return___001_Cloud_Services_AWS_EC2[instance_count])";
      "activation __002_Cloud_Services_AWS_EC2 returned instance_count = $(return___002_Cloud_Services_AWS_EC2[instance_count])";
}
