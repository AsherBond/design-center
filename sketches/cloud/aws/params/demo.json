{
    "Cloud::Services::AWS":
    {
        count: 1,
        ami: "ami-a29943cb",
        class: "cfworker",
        install_cfengine: true,
	    hub: "$(sys.ipv4)",
        options:
        {
            security_group: "cf",
            netrc: "~/.netrc",
            ssh_pub_key: "/root/.ssh/id_rsa.pub"
        },
    }
}

