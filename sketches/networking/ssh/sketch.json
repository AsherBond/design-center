{
    manifest:
    {
        "ssh.cf": { desc: "main file" },
        "README.md": { documentation: true },
        "params/simple.json": { }
    },

    metadata:
    {
        name: "Security::SSH",
	description: "Configure and enable sshd",
        version: 1.10,
        license: "MIT",
        tags: [ "cfdc" ],
        authors: [ "Diego Zamboni <diego.zamboni@cfengine.com>", "Ted Zlatanov <tzz@lifelogs.com>" ],
        depends:
        {
            "CFEngine::stdlib": { version: 105 },
            cfengine: { version: "3.4.0" },
        }
    },

    api:
    {
        // the key is the name of the bundle!
        sshd: [ { type: "environment", name: "runenv", },
                { type: "metadata", name: "metadata", },
                { type: "array", name: "params", }, ],
    },

    namespace: "cfdc_sshd",
    entry_point: "ssh.cf", // this is where we'll find all the bundles named in the API
    interface: [ "ssh.cf" ]
}
