{
   "WebApps::wordpress_install" : {
      "activated" : true,
      "apache_srv" : {
         "bycontext" : {
            "debian|ubuntu" : "apache2",
            "redhat|centos" : "httpd"
         }
      },
      "htmlroot" : {
         "bycontext" : {
            "debian|ubuntu" : "/var/www",
            "redhat|centos" : "/var/www/html"
         }
      },
      "httpd_process" : {
         "bycontext" : {
            "centos" : "/usr/sbin/httpd",
            "debian|ubuntu" : "/usr/sbin/apache2",
            "redhat" : "^httpd"
         }
      },
      "mysql_process" : {
         "bycontext" : {
            "centos" : "/usr/libexec/mysqld",
            "debian|ubuntu" : "/usr/sbin/mysqld",
            "redhat" : "^mysqld"
         }
      },
      "mysql_srv" : {
         "bycontext" : {
            "debian|ubuntu" : "mysqld",
            "redhat|centos" : "mysqld"
         }
      },
      "packages" : {
         "bycontext" : {
            "debian|ubuntu" : [
               "apache2",
               "php5",
               "php5-mysql",
               "libapache2-mod-php5",
               "mysql-server"
            ],
            "redhat|centos" : [
               "httpd",
               "php",
               "php-mysql",
               "mysql-server"
            ]
         }
      },
      "service_cmd" : {
         "bycontext" : {
            "debian|ubuntu" : "/usr/sbin/service",
            "redhat|centos" : "/sbin/service"
         }
      },
      "wp_dir" : {
         "bycontext" : {
            "debian|ubuntu" : "/var/www/blog",
            "redhat|centos" : "/var/www/html/blog"
         }
      },
      "wp_params" : {
         "DB_NAME" : "wordpress_db",
         "DB_PASSWORD" : "wordpress_pass",
         "DB_USER" : "wordpress_user"
      }
   }
}
